@using Microsoft.AspNetCore.Identity
@using TGAcademyMVC.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-header">
    <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
        <img src="~/images/profile_image.png" class="profile-image">
    </a>
    <br />
    <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
</form>
}
else
{
    <ul>
        <li><a class="sb-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a class="sb-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
